{
    "name": "Pinyin Generator",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["extensionWindow.css"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": [
            "character-source.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "Pinyin Generator Icon.png",
        "default_popup": "popup.html",
        "default_title": "A popup will come here."
    },
    "web_accessible_resources": ["pinyin_generator_demo.mp4"]
}