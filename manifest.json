{
    "name": "Pinyin Generator",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["extensionWindow.css"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": [
            "character-source.js",
            "background.js"
        ]
    }
}